<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frameupcreatepost"
    tools:context=".Activities.CreatePost">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="312dp"
        android:layout_height="249dp"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Post_Caption"
            android:layout_width="300dp"
            android:layout_height="121dp"
            android:background="@drawable/box_stroke"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="start"
            android:hint="Caption"
            android:inputType="textEmailAddress|textMultiLine"
            android:lines="20"
            android:minLines="5"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textColor="@color/Secondary_Color_1"
            android:textColorHint="@color/Secondary_Color_1"
            android:textSize="11sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Post_subject"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box_stroke"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Subject"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:textColor="@color/Secondary_Color_1"
            android:textColorHint="@color/Secondary_Color_1"
            android:textSize="11sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Post_hashtag"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box_stroke"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Hashtags"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/Secondary_Color_1"
            android:textColorHint="@color/Secondary_Color_1"
            android:textSize="11sp" />


    </LinearLayout>

    <Button
        android:id="@+id/create_post_btn"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:background="@drawable/button_style_gradient"
        android:text="Create Post"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="76dp"
        android:layout_height="69dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/image_icon"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Heading"
        android:layout_width="211dp"
        android:layout_height="64dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="What's in Your Mind?"
        android:textColor="@color/Primary_Color_2"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927" />


    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Primary_Color_2"
        android:progressBackgroundTint="@color/Primary_Color_2"
        android:progressTint="@color/Primary_Color_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705" />

    <TextView
        android:id="@+id/post_error"
        android:layout_width="282dp"
        android:layout_height="15dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="168dp"
        android:gravity="center_horizontal|center_vertical"
        android:text=" "
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>