<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frameupmakerequestbg"
    tools:context=".Activities.CreateNotice">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_preview_rm"
        android:layout_width="285dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg_for_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Issue_Request_Send_To">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_image_notice_rm"
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.533"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/email_ru_notice_rm"
            android:layout_width="162dp"
            android:layout_height="18dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="suport@lhr.nu.edu.pk"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.626"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/name_notice_lay_rm"
            android:layout_width="167dp"
            android:layout_height="26dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Not Found"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.652"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_up"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:background="@drawable/title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Issue_Layout_Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Make Request / Message"
            android:textColor="@color/Primary_Color_2"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Issue_Request"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/white_bg_for_profile"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:hint="Comment"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_up" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/issue_Request_society_id"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg_for_profile"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:hint="sid"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_up" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Issue_Request_Subject"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg_for_profile"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:hint="Subject"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Issue_Request" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Issue_Request_Type"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg_for_profile"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:hint="Type"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Issue_Request_Subject" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Issue_Request_Send_To"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg_for_profile"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:hint="Roll no"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Issue_Request_Type" />

    <Button
        android:id="@+id/send_notice"
        android:layout_width="223dp"
        android:layout_height="46dp"
        android:layout_marginTop="664dp"
        android:background="@drawable/button_style_gradient"
        android:text="Send "
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_up" />

    <ProgressBar
        android:id="@+id/progressBar_notice"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_preview_rm" />

</androidx.constraintlayout.widget.ConstraintLayout>