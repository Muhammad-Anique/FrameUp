<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ViewReport">

    <com.github.mikephil.charting.charts.BarChart

        android:id="@+id/bb"
        android:layout_width="355dp"
        android:layout_height="303dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="96dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Report_Conculsion_field" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_cr"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:background="@drawable/title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/View_Report_Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="View Report"
            android:textColor="@color/Primary_Color_1"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/report_subject_field"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/white_bg_for_profile"
        android:gravity="center"
        android:text="Report Subject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_cr" />

    <TextView
        android:id="@+id/report_subject_tv"
        android:layout_width="78dp"
        android:layout_height="17dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_style_gradient"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:padding="5dp"
        android:text="Report Subject"
        android:textColor="@color/white"
        android:textSize="6sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/report_subject_field" />

    <TextView
        android:id="@+id/Report_Conculsion_field"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg_for_profile"
        android:gravity="center"
        android:padding="5dp"
        android:text="Report Conclusion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_body_field" />

    <TextView
        android:id="@+id/report_body_field"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg_for_profile"
        android:gravity="center"
        android:padding="10dp"
        android:text="Report Body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_subject_field" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="78dp"
        android:layout_height="17dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_style_gradient"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Report Body"
        android:textColor="@color/white"
        android:textSize="6sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/report_body_field" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="83dp"
        android:layout_height="17dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/button_style_gradient"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Report Conclusion"
        android:textColor="@color/white"
        android:textSize="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Report_Conculsion_field" />


</androidx.constraintlayout.widget.ConstraintLayout>