<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createreportbg"
    tools:context=".Activities.CreateReport">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_cr"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:background="@drawable/title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/View_Report_Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Create Report"
            android:textColor="@color/Primary_Color_1"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Report_Conculsion"
        android:layout_width="286dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_bg_for_profile"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:hint="Report Conclusion"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Report_Body" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/society_id_tv"
        android:layout_width="286dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_bg_for_profile"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:hint="Society Id"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Report_Conculsion" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Report_Body"
        android:layout_width="287dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg_for_profile"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:hint="Report Body"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Report_Subject" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Report_Subject"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/white_bg_for_profile"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:hint="Report Subject"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_cr" />

    <Button
        android:id="@+id/create_report_btn_rr"
        android:layout_width="156dp"
        android:layout_height="43dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_stroke"
        android:text="Create Report"
        android:textColor="@color/Primary_Color_1"
        android:textSize="9sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/society_id_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>